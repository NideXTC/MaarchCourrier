<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema 
  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  xmlns:das="maarch:DataAccessService"  
  elementFormDefault="qualified">

  <xsd:include schemaLocation='core/xml/datatypes.xsd' />
  <xsd:include schemaLocation='apps/maarch_entreprise/xml/datasources.xsd' />
  <!-- xsd:include schemaLocation='modules/entities/xml/eac-cpf.xsd' /-->

  <!-- ROOT : ENTITIES -->
  <xsd:element name='entities_root'
    das:module="entities">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element ref='entities' minOccurs="0" maxOccurs='unbounded'/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>
  
  <xsd:element name='entities' type='entities' 
    das:source='maarch_entreprise'
    das:filter='entity_id entity_label adrs_1'>
    <xsd:key name="entities_pkey">
      <xsd:selector xpath=".."/>
      <xsd:field xpath="@entity_id" das:enclosed='true'/>
    </xsd:key>
  </xsd:element>
  
  <xsd:complexType name='entities'>
    <xsd:attribute name="entity_id" type="varchar32" use="required" />
    <xsd:attribute name="entity_label" type="varchar255" use="required"/>
    <xsd:attribute name="short_label" type="varchar50" />
    <xsd:attribute name="enabled" type="boolean" use="required" default="Y" />
    <xsd:attribute name="adrs_1" type="varchar255" />
    <xsd:attribute name="adrs_2" type="varchar255" />
    <xsd:attribute name="adrs_3" type="varchar255" />
    <xsd:attribute name="zipcode" type="varchar32" />
    <xsd:attribute name="city" type="varchar255" />
    <xsd:attribute name="country" type="varchar255" />
    <xsd:attribute name="email" type="varchar255" />
    <xsd:attribute name="business_id" type="varchar32" />
    <xsd:attribute name="parent_entity_id" type="varchar32" />
    <xsd:attribute name="entity_type" type="varchar64" />
    <xsd:sequence>
      <!--xsd:element name="adrs_1" type="varchar255" das:source='maarch_entreprise' das:table='entities'/-->
      <xsd:element ref="rm_entities" minOccurs="0" />
    </xsd:sequence>
  </xsd:complexType>
  
  <xsd:element name='rm_entities' type='rm_entities' 
    das:source='maarch_entreprise'
    das:key='rm_entities_pkey'>
    <xsd:annotation>
      <xsd:appinfo>
        <das:relation name='entities_rm_entities' parent='entities' child='rm_entities'>
          <das:foreign-key parent-key="entity_id" child-key="entity_id" enclosed='true'/>
        </das:relation> 
      </xsd:appinfo>
    </xsd:annotation>
    <xsd:key name="rm_entities_pkey">
      <xsd:selector xpath="."/>
      <xsd:field xpath="rm_entity_id"/>
    </xsd:key>
  </xsd:element>
    
  <xsd:complexType name='rm_entities'>
    <xsd:attribute name="rm_entity_id" type="bigint" use="required" />
    <xsd:attribute name="entity_id" type="varchar32" use="required" />
    <xsd:attribute name="is_archival" type="boolean" default="N" />
    <xsd:attribute name="is_originating" type="boolean" default="N" />
    <xsd:attribute name="is_transferring" type="boolean" default="N" />
    <xsd:attribute name="is_controlling" type="boolean" default="N" />
    <xsd:attribute name="rm_type" type="varchar50" />
    <xsd:attribute name="parallel_forms_of_names" type="text" />
    <xsd:attribute name="other_normalized_names" type="text" />
    <xsd:attribute name="other_names" type="text" />
    <xsd:attribute name="oldest_date" type="datetime" />
    <xsd:attribute name="latest_date" type="datetime" />
    <xsd:attribute name="history" type="text" />
    <xsd:attribute name="places" type="text" />
    <xsd:attribute name="legal_status" type="text" />
    <xsd:attribute name="activities" type="text" />
    <xsd:attribute name="mandates" type="text" />
    <xsd:attribute name="structure" type="text" />
    <xsd:attribute name="context" type="text" />
    <xsd:attribute name="record_id" type="varchar100" />
    <xsd:attribute name="institution_id" type="varchar255" />
    <xsd:attribute name="rules" type="text" />
    <xsd:attribute name="status" type="varchar255" />
    <xsd:attribute name="detail_level" type="varchar255" />
    <xsd:attribute name="maintenance_dates" type="datetime" />
    <xsd:attribute name="description_language" type="varchar100" />
    <xsd:attribute name="sources" type="text" />
    <xsd:attribute name="maintenance_notes" type="text" />
  </xsd:complexType>
  
